<%- include('partials/header') %>

<section>
  <h2>PCOS-Friendly Recipes</h2>

  <form method="GET" action="/recipes" class="search-form">
    <label>
      Search recipes
      <input
        type="text"
        name="q"
        value="<%= search %>"
        placeholder="e.g. salmon, breakfast, comfort"
      />
    </label>
    <button type="submit" class="btn">Search</button>

    <% if (search) { %>
      <a class="btn-secondary" href="/recipes">Clear</a>
    <% } %>
  </form>

  <% if (recipes.length === 0) { %>
    <p>No recipes found.</p>
  <% } else { %>
    <ul class="card-list">
      <% recipes.forEach(r => { %>
        <li class="card">
          <h3><%= r.title %></h3>
          <% if (r.main_tag) { %>
            <p class="tag"><%= r.main_tag %></p>
          <% } %>
          <p><%= r.summary %></p>
          <p class="meta">
            Prep: <%= r.prep_time_minutes %> mins
            &middot;
            Difficulty: <%= r.difficulty %>
          </p>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>

<%- include('partials/footer') %>
